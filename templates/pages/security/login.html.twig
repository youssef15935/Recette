{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}


	<div class="container">
		<h1 class="mt-4">Formulaire de connexion</h1>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		{% if error %}
			<div class="alert alert-danger mt-4">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>

		{% endif %}

		<form action="{{ path('security.login') }}" method="post">
			<div>
				<label for="username" class="form-label mt-4">Email</label>
				<input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp" placeholder="exemple@youssef.com" value="{{last_username}}">
			</div>
			<div>
				<label for="password" class="form-label mt-4">Mot de passe</label>
				<input type="password" class="form-control" id="password" placeholder="********" name="_password" autocomplete="off">
			</div>
			<div>
				<button type="submit" class="btn btn-primary mt-4">Se connecter</button>
			</form>
		</div>
	{% endblock %}
