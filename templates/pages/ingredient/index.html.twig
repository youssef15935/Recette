{% extends 'base.html.twig' %}

{% block title %}Ingredients{% endblock %}

{% block body %}
<div class="container mt-4 ">
    {% if ingredients.items is not same as([]) %}
    <h1>Mes Ingredients</h1>
    <a  href="{{path('ingredient.new')}}" class="btn btn-primary mt-4">Cr√©er un Ingredient</a>
   {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
    <div class="count d-flex justify-content-center mt-4">
       Il y a  
       {{ ingredients.getTotalItemCount  }} 
